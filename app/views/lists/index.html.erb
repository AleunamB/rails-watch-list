<h1>Lists all "Homepage"</h1>

<ul>
  <% @lists.each do |list| %>
    <li>
      <p><%= link_to list.name, list_path(list) %></p>
      <p><%= link_to "Delete", list_path(list),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
    </li>
  <% end %>
</ul>

<div>
  <%= link_to "New list", new_list_path %>
</div>


<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
